{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "build:types": {
      "dependsOn": ["^build:types"],
      "outputs": ["build/types/**"]
    },
    "build:js": {
      "dependsOn": ["build:types", "api:extract"],
      "outputs": ["dist/**"]
    },
    "api:extract": {
      "dependsOn": ["build:types"],
      "outputs": ["dist/*.d.ts"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "cache": false,
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
