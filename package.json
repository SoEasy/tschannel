{
  "name": "tschannel-monorepo",
  "version": "0.0.0",
  "private": false,
  "description": "Type-safe communication channel library - monorepo",
  "scripts": {
    "build": "turbo run build",
    "build:core": "turbo run build --filter=@tschannel/core",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:core": "turbo run test --filter=@tschannel/core",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "clean": "turbo run clean",
    "dev": "turbo run dev --parallel",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish",
    "licenses:check": "license-checker-rseidelsohn --production --onlyAllow 'MIT;ISC;BSD-2-Clause;BSD-3-Clause;Apache-2.0'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SoEasy/tschannel.git"
  },
  "keywords": [],
  "author": "SoEasy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SoEasy/tschannel/issues"
  },
  "homepage": "https://github.com/SoEasy/tschannel#readme",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.14.4",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier -w"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@microsoft/api-extractor": "7.52.11",
    "@rollup/plugin-commonjs": "28.0.6",
    "@rollup/plugin-json": "6.1.0",
    "@rollup/plugin-node-resolve": "16.0.1",
    "@typescript-eslint/eslint-plugin": "8.41.0",
    "@typescript-eslint/parser": "8.41.0",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.34.0",
    "eslint-config-prettier": "10.1.8",
    "husky": "9.1.7",
    "license-checker-rseidelsohn": "4.4.2",
    "lint-staged": "16.1.5",
    "prettier": "3.6.2",
    "rollup": "4.48.1",
    "rollup-plugin-typescript2": "0.36.0",
    "turbo": "^2.6.1",
    "typescript": "5.5.4",
    "vitest": "3.2.4"
  }
}
